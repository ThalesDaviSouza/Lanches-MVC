@model CarrinhoCompraViewModel


<section>
    <div>
        <img src="~/images/Full-Cart-icon.png" />
        <div>
            <h4>Seu carrinho de compras:</h4>
        </div>
    </div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th class="text-end">Preço</th>
                <th class="text-end">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CarrinhoCompraItem item in Model.CarrinhoCompra.CarrinhoCompraItens)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-start">@item.Lanche.Nome</td>
                    <td class="text-end">R @item.Lanche.Preco.ToString("c")</td>
                    <td class="text-end">R @((item.Lanche.Preco * item.Quantidade).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                       asp-route-lancheId="@item.Lanche.LancheId">
                            <img src="~/images/remove.ico" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Total:</td>
                <td class="text-end">R@(Model.CarrinhCompraTotal.ToString("c"))</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <button type="button" class="btn btn-outline-success">Encerrar Pedido</button>
    <button type="button" class="btn btn-outline-primary">Continuar Comprando</button>
</section>